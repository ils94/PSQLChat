<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DisplayDetailsActivity">

    <EditText
        android:id="@+id/detailsDisplayIdentifyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Give a name to identify this database"
        android:inputType="text"
        android:maxLines="1"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/detailsDisplayUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your username"
        android:inputType="text"
        android:maxLines="1"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/detailsDisplayDbName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="dbName"
        android:inputType="text"
        android:maxLines="1"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/detailsDisplayDbUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="dbUser"
        android:inputType="text"
        android:maxLines="1"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/detailsDisplayDbPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="dbPass"
        android:inputType="text"
        android:maxLines="1"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/detailsDisplayDbHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="dbHost"
        android:inputType="text"
        android:maxLines="1"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/detailsDisplayDbPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="dbPort"
        android:inputType="number"
        android:maxLines="1"
        tools:ignore="Autofill,HardcodedText" />

    <EditText
        android:id="@+id/detailsDisplayEncryptKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Encrypt Key"
        android:maxLines="1"
        tools:ignore="Autofill,HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/detailsBtnEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit"
            tools:ignore="HardcodedText" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/detailsBtnConnect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Connect"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>
